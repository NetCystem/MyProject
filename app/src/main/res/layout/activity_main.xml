<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_layout"
    tools:context="com.example.macbook.myproject.MainActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A879"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:layout_gravity="center"
                android:textSize="27sp"
                android:textColor="@color/titleColor"
                android:id="@+id/toolbar_title"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:id="@+id/recyclerView"
        >
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A879"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                >

                <ImageView
                    android:id="@+id/email_sphere"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ellipse"/>
                <ImageView
                    android:id="@+id/email"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/email"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp">

                <ImageView
                    android:id="@+id/calendar_sphere"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ellipse"/>
                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/calendar"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="45dp">

                <ImageView
                    android:id="@+id/checklist_sphere"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ellipse"/>
                <ImageView
                    android:id="@+id/checklist"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/checklist"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/search_sphere"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ellipse"/>
                <ImageView
                    android:id="@+id/search"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/search"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


        </LinearLayout>




    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/recyclerView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/add_contact_icon" />

</RelativeLayout>

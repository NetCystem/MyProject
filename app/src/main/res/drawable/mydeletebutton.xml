<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00a879" />
            <gradient android:angle="-90" android:startColor="#00a879" android:endColor="#00a879"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00a879" />
            <solid android:color="#00a879"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#F35F5F" />
            <gradient android:angle="-90" android:startColor="#F35F5F" android:endColor="#F35F5F" />
        </shape>
    </item>

</selector>